    <nav class="nav">
        <a href="#home" id="home-link">Home</a> <!-- Home link -->
        <a href="#orphanage" id="orphanage-link">Our Orphanage</a> <!-- Our Orphanage link -->
        <a href="#adoption" id="adoption-link">Adoption</a> <!-- Adoption link -->
        <a href="#quote" id="quote-link">Our Quote</a> <!-- Quote link -->
    </nav>
    <button class="sign-up">Sign Up</button>
